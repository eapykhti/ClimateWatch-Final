{
    "name": "Climate Watch",
    "version": "1.0",
    "manifest_version": 3,
    "host_permissions": ["<all_urls>"],
    "permissions": ["tabs","storage"],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content_script.js"],
            "css": ["css/addedStyles.css"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}